#>Foo.ulam
  ulam 1;
use Booly;
element Foo{
  parameter Unsigned(3) p = 3u;
  constant Unsigned(3) c = 2u;
  Unsigned(3) n = 2u;
  Int test(){
    Unsigned(3) m = 0u;
    Booly(m, n, true) bv;
    Booly(c + Foo.sizeof, p, true) bc; //firstRange ok
    return bv.behave();
  }
}

#:Booly.ulam
  quark Booly(Unsigned(3) firstRange, Unsigned(3) lastRange, Bool bomb) {
  Bool behave(){
    if(bomb && lastRange != firstRange) return true;
    return false;
  }
}
