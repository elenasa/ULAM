##
## informed by t41167, the first test of C-99 class instance initialization
## except as local variables instead of data members
##
#>A.ulam
  ulam 3;
local constant String c_str = "foo";
//use QBar; //remove this eventually!
element A {
  Bool b;

 Int test() {
   SystemU3 su3;

   QBar bar = { .r = 3, .sp = true }; //may be in different order than declared in class
   String m_str = local.c_str;
   QStr m_s = { .m_str = "bar" };

   ASCII fasc = m_str[0];
   b = (fasc == 'f');
   su3.print(m_str);
   su3.assert(b);

   ASCII qasc = m_s.m_str[1];
   b = (qasc == 'a');
   su3.print(m_s.m_str);
   su3.assert(b);

   Unary(3) chkr = bar.r;
   su3.print(chkr);
   su3.print(bar.r);
   su3.assert(bar.r == 3);

   su3.print(bar.sp);
   su3.assert(bar.sp);

   return 0;
 }
}

#:QBar.ulam
  ulam 3;
quark QBar {
  Bool sp;
  Unary(3) r = 1;
}

#:QStr.ulam
  ulam 3;
quark QStr {
  String m_str = "hello world";
}

#:SystemU3.ulam
  ulam 3;
quark SystemU3 : System {
  Void print(String s) native;
}

#:System.ulam
  ulam 1;
quark System {
  Void print(Unsigned arg) native;
  Void print(Int arg) native;
  Void print(Int(4) arg) native;
  Void print(Int(3) arg) native;
  Void print(Unary(3) arg) native;
  Void print(Bool(3) arg) native;
  Void assert(Bool b) native;
}
