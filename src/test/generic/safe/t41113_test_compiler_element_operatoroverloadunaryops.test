##
## first test to parse unary operator+,-,! for an element
## informed by t41104.
##
#>Foo.ulam
  ulam 3;
element Foo {
  Bool first;
  Int fint, opfint;
  Int test() {
    System s;
    Foo foo;
    foo.fint = 2;

    //overloaded unary operator+ (2b)
    opfint = +foo;
    s.print(opfint);
    s.assert(opfint == 5);

    //overloaded unary operator- (2d)
    opfint = -foo;
    s.print(opfint);
    s.assert(opfint == -1);

    //overloaded unary operator! (21)
    first = !foo; //no change to foo.
    s.print(first);
    s.assert(first);

    //multiple overloaded unary operator! (21)
    first = !!!foo; //no change to foo; only first ! is overload.
    s.print(first);
    s.assert(first);

    //explicit call to unary operator+
    opfint = foo.operator+();
    s.print(opfint);
    s.assert(opfint == 5);
    return opfint;
  }

  Int operator+()
  {
    return 5;
  }

  Int operator-()
  {
    return -1;
  }

  Bool operator!()
  {
    return !first;
  }

}

