element A {
  System s;
  Bool(7) b;
  Unsigned d = 1;
  Int test(){
    typedef Bits BA[4];
    Int a = 8;
    while(a!=0)
    {
      BA dits;
      Unary(3) i = 0;
      dits[1] = d;
      dits[++i] <<= 1; //evaluation lhs only once
