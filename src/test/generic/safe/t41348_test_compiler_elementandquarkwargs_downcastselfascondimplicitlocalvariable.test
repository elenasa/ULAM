##
## "conditional downcast"
## informed by 41344, except local variable 'first' shadowed by subclass
##
#:Typo.ulam
  ulam 2;
use Eltypo;
quark Typo(Int a) : Bar{
  Bool typool;
  Void functest()
  {
    System s;
    if(self as Eltypo){
      Unsigned first = 5;
      super.typool = true; //super optional, found in Eltypo ancestor
      s.assert(typool);
      t.func(3u); //modifies ElTypo datamember 'bu' in Bar
      s.print(t.bu);
      s.assert(t.bu == 3);
      first = t.bu; //local variable used here
      s.print(first);
      s.assert(first == 3u);
    }
    else
      s.assert(false);
  }
}

#:Bar.ulam
