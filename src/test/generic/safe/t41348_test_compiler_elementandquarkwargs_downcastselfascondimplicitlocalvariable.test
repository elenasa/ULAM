#>Eltypo.ulam
  ulam 2;
use Typo;
use System;
element Eltypo : Typo(1) {
  System s;
  Unsigned(3) first;
  Unsigned(3) second;
  Typo(1) t;
  Int test(){
    functest();
    s.print(t.bu);
    s.assert(t.bu == 3);
    s.print(first);
    s.assert(first != 3); //local var in base changed
    s.assert(first == 0); //local var in base changed
    second = self.bu; //still 7
    return second;
  }
}

