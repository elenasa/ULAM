#>A.ulam
  ulam 3;
element A {
  System s;
  Int a, b;
  Int test() {
    a = 2;
    b = 0;
    while(true)
    {
      which((--a))
      {
      case 0:
	{
	  b = 2;
	  continue; //to end of while
	}
      case -1:
	{
	  b = 3;
	  break; //to end of switch
	}
      otherwise:
	{
	  b = 1;
	  //break; falls through..
	}
      }
      //only reaches with breakless default!
      s.print(b);
      s.assert(b == 1);
      s.print(a);
      s.assert(a == 1); //eval only once!
      if (b == 1)
	break; //out of while <--the break test
    } //end while

    s.print(b);
    s.assert(b == 1);
    s.print(a);
    s.assert(a == 1);
    return a;
  }
}

