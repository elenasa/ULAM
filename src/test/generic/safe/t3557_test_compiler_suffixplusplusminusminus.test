#>Foo.ulam
  ulam 2;
element Foo {
  System s;
  typedef Unsigned(8) ARGB[4];
  Void func() {
    ARGB val;
    for (Int i = 0; i < 3; i++)
      val[i] = (Unsigned(8)) i;

    for (Unsigned i = 0; i < 3u; i++)
    {
      Bool b = val[i] == i;
      s.print((Unsigned) val[i]);
      s.assert(b);
    }
  }

  Void wunc() {
    ARGB val;
    Unsigned i = 0;
    while(i++ < 3u)
      val[i] = (Unsigned(8)) i; //1, 2, 3, not 0

    i = 0;
    while(i++ < 3u)
    {
      s.print(i); //1, 2, 3, not 0
      Bool b = (val[i] == i);
      s.assert(b);
    }
  }

  Int test() {
    Int a;
    a++;
    s.print(a);
    s.assert(a == 1);
    a--;
    s.print(a);
    s.assert(a == 0);

    func();
    wunc();
    return a;
  }
}

