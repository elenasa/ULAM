##
## first parsing test of constructors!!
## informed by t3511: answer is saturated
##
#>A.ulam
  ulam 3;
element A {
  Bar bar;
  Int test(){
    System s;
    Bar localbar(false); //first time a constructor used!!
    A locala(2, 9); //second time a constructor is used!!

    //self, default
    s.print(a+b); // =9
    s.assert(a+b == 9);
    s.print(bar.b); // true
    s.assert(bar.b);

    //local variables
    s.print(localbar.b); //false
    s.assert(!localbar.b); //default reset by constructor

    s.print(locala.d); //reset to false
    s.assert(!locala.d);

    s.print(locala.a + locala.b); //2 + 7 (maxof)
    s.assert(locala.a + locala.b == 9);

    A localaa(false);
    s.print(localaa.a + localaa.b); //=7
    s.assert(localaa.a + localaa.b == 7);

    //self again..
    s.print(--a + --b); //=7
    s.assert(a + b == 7);
    return (a + b); //7
  }

  Bool(7) d = true;
  Int(4) a = 4;
  Int(4) b = 5;

  Self(Int a1, Int b1)
  {
    a = (Int(4)) a1;
    b = (Int(4)) b1;
    d = false;
  }

  //note: called after the default values are set!
  Self(Bool b1)
  {
    if(b1)
    {
      a++;
      b++;
    }
    else
    {
      a--;
      b--;
    }
    d = b1;
  }
}

