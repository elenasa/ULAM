ulam 5;
use ByteStream;

transient ByteStreamArray(Unsigned len) : ByteStreamReaderWriter {

  Unsigned mWrite = 0;
  Unsigned mRead = 0;
  ASCII mData[len];
  
  Bool stillRoom() { return mWrite < len; }

  @Override
  Bool canReread() { return true; }

  @Override
  Bool canRewrite() { return true; }

  @Override
  Int writeByte(ASCII x) 
  {
    if (stillRoom()) {
      mData[mWrite++] = x;
      return 0;
    }
    return -1;
  }
  
  @Override
  Int readByte() 
  {
    if (mRead < mWrite) return mData[mRead++];
    if (stillRoom()) return -2;
    return -1;
  }
  
  Void reset() 
  {
    reread();
    rewrite();
  }

  @Override
  Void reread() 
  {
    mRead = 0;
  }

  @Override
  Void rewrite() 
  {
    mWrite = 0;
  }

}
